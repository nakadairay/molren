<%= render "shared/second-header" %>

<div class="AccountPage">
  <div class="AccountPage__title">
    <div class="AccountPage__head">
    <h1>新規ユーザー登録</h1><br>
    </div>
  </div>
  <div class="AccountPage__form">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="FormField">
        <div class="FormField__label--normal">
          <%= f.label :nickname %>
        </div>
        <div class="FormField__input--normal">
          <%= f.text_field :nickname, autofocus: true %>
        </div>
      </div>

      <div class="FormField">
        <div class="FormField__label--normal">
          <%= f.label :email %>
        </div>
        <div class="FormField__input--normal">
          <%= f.email_field :email %>
        </div>
      </div>

      <%if @sns_id.present? %>
        <%= hidden_field_tag :sns_auth, true %>
      <% else %>
        <div class="field">
          <%= f.label :password %>
          <% @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
      
        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      <% end %>

      <div class="FormField">
        <div class="FormField__label--normal">
          <%= f.label :first_name（苗字） %>
        </div>
        <div class="FormField__input--normal">
          <%= f.text_area :first_name %>
        </div>
      </div><br>

      <div class="FormField">
        <div class="FormField__label--normal">
          <%= f.label :last_name（名前） %>
        </div>
        <div class="FormField__input--normal">
          <%= f.text_area :last_name %>
        </div>
      </div><br>

      <div class="FormField">
        <div class="FormField__label--normal">
          <%= f.label :first_name_kana（全角カナ） %>
        </div>
        <div class="FormField__input--normal">
          <%= f.text_area :first_name_kana %>
        </div>
      </div><br>

      <div class="FormField">
        <div class="FormField__label--normal">
          <%= f.label :last_name_kana（全角カナ） %>
        </div>
        <div class="FormField__input--normal">
          <%= f.text_area :last_name_kana %>
        </div>
      </div><br>

      <div class='input-birth-wrap'>
        <%= raw sprintf(
                    f.date_select(
                      :birthday,
                      class:'select-birth',
                      id:"birth-date",
                      use_month_numbers: true,
                      prompt:'--',
                      start_year: 1930,
                      end_year: (Time.now.year - 5),
                      date_separator: '%s'),
                    "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
      </div>

      <div class="sex-field">
        <%= f.label :Sex %><br />
        <%= f.label :man  %>
        <%= f.radio_button :sex, :man %>
        <%= f.label :woman  %>
        <%= f.radio_button :sex, :woman %>
      </div>

      <div class="registration-btn">
        <%= f.submit "新規登録", class: "registration-text"%>
      </div>
    <% end %>
  </div>
</div>


