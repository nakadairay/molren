<div class="AccountPage">
  <div class="AccountPage__title">
    <h1>新規ユーザー登録</h1>
    <%= render "devise/shared/links" %><br>
  </div>
  <div class="AccountPage__form">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="FormField">
        <div class="FormField__label--normal">
          <%= f.label :nickname %>
        </div>
        <div class="FormField__input--normal">
          <%= f.text_field :nickname, autofocus: true %>
        </div>
      </div>

      <div class="FormField">
        <div class="FormField__label--normal">
          <%= f.label :email %>
        </div>
        <div class="FormField__input--normal">
          <%= f.email_field :email %>
        </div>
      </div>

      <div class="FormField">
        <div class="FormField__label--normal">
          <%= f.label :password %>
          （英数字で6文字以上）
        </div>
        <div class="FormField__input--normal">
          <%= f.password_field :password, autocomplete: "off" %>
        </div>
      </div>

      <div class="FormField">
        <div class="FormField__label--normal">
          <%= f.label :password（確認用） %>
        </div>
        <div class="FormField__input--normal">
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
        </div>
      </div><br>

      <div class="FormField">
        <div class="FormField__label--normal">
          <%= f.label :first_name（苗字） %>
        </div>
        <div class="FormField__input--normal">
          <%= f.text_area :last_name %>
        </div>
      </div><br>

      <div class="FormField">
        <div class="FormField__label--normal">
          <%= f.label :last_name（名前） %>
        </div>
        <div class="FormField__input--normal">
          <%= f.text_area :last_name %>
        </div>
      </div><br>

      <div class="FormField">
        <div class="FormField__label--normal">
          <%= f.label :first_name_kana（全角カナ） %>
        </div>
        <div class="FormField__input--normal">
          <%= f.text_area :first_name_kana %>
        </div>
      </div><br>

      <div class="FormField">
        <div class="FormField__label--normal">
          <%= f.label :last_name_kana（全角カナ） %>
        </div>
        <div class="FormField__input--normal">
          <%= f.text_area :last_name_kana %>
        </div>
      </div><br>

      <div class='input-birth-wrap'>
        <%= raw sprintf(
                    f.date_select(
                      :birthday,
                      class:'select-birth',
                      id:"birth-date",
                      use_month_numbers: true,
                      prompt:'--',
                      start_year: 1930,
                      end_year: (Time.now.year - 5),
                      date_separator: '%s'),
                    "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
      </div>

      <div class="sex-field">
        <%= f.label :Sex %><br />
        <%= f.label :man  %>
        <%= f.radio_button :sex, :man %>
        <%= f.label :woman  %>
        <%= f.radio_button :sex, :woman %>
      </div>

      <div class="actions">
        <%= f.submit "新規登録" %>
      </div>
    <% end %>
  </div>
</div>


