<%= render "shared/second-header" %>


  <h2 class="login-title">ログイン</h2><br>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="">
      <div class="input-form">
        <%= f.email_field :email, :placeholder => "メールアドレス", class:"input-mail", autofocus: true %>
      </div>
      <div class="input-form">
          <%= f.password_field :password, :placeholder => "パスワード（英数字で6文字以上）", class:"input-pw", autocomplete: "off" %>
        </div>
      </div><br>
      <div class="login-btn">
        <%= f.submit "ログイン", class: "login-button"%>
      </div>
    </div>
  <% end %>

  <h3 class="t-deco">or</h3>


    <div class="sign-up-facebook">
        <%= link_to 'Facebookでログイン', user_facebook_omniauth_authorize_path, method: :post, class:"fa-text" %>
    </div>
    <div class="sign-up-google">
        <%= link_to 'Googleでログイン', user_google_oauth2_omniauth_authorize_path, method: :post, class: "google-text" %>
    </div>


  <div class="wrapper">
    <span class="text">アカウントをお持ちではありませんか？</>
    <%= link_to '会員登録', new_user_path, class: "create-account-link" %>
  </div>
  </div>
</div>

